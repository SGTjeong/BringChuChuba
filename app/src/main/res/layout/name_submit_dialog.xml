<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable name="infoFrag" type="com.bring.chuchuba.view.MyInfoFragment"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:background="@drawable/alert_dialog">

        <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="닉네임 설정"
                android:textColor="#fff"
                android:textSize="18sp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/dialog_title" app:layout_constraintEnd_toEndOf="parent"/>

        <EditText android:layout_width="0dp"
                  android:layout_height="40dp"
                  android:background="@drawable/mission_item_stroke"
                  android:id="@+id/nickNameEditText"
                  android:textColor="#E6000000"
                  android:textSize="14sp"
                  android:inputType="text"
                  android:imeOptions="actionDone"
                  android:paddingHorizontal="6dp"
                  android:layout_marginHorizontal="16dp"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toBottomOf="@+id/dialog_title"
                  app:layout_constraintBottom_toTopOf="@+id/dialog_description"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="가족 구성원에게 보여지는 닉네임입니다"
                  android:layout_marginHorizontal="24dp"
                  android:textColor="#CDE3E3E3"
                  android:textAlignment="center"
                  android:textSize="10sp"
                  android:layout_marginBottom="8dp"
                  app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
                  app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                  android:id="@+id/dialog_description"/>
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="2dp"
                android:background="#fff" app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
                android:id="@+id/view"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/linearLayout2">

            <Button
                    android:id="@+id/closeNameSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="취소"
                    android:textColor="#AFAFAF"
                    android:textSize="16sp"
                    android:background="@android:color/transparent" android:textStyle="bold"/>

            <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#fff"/>

            <Button
                    android:id="@+id/sendNameSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="변경"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:background="@android:color/transparent"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>