<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="cmFrag" type="com.bring.chuchuba.view.CreateMissionFragment"/>
        <variable name="hVm" type="com.bring.chuchuba.viewmodel.HomeViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:background="#90DCFF"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@{`나의 잔여 포인트 : ` + hVm.myInfo.point}"
                  android:hint="포인트"
                  android:textSize="18sp"
                  android:layout_marginTop="16dp"
                  android:textColor="#000"
                  android:id="@+id/my_point" app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintTop_toTopOf="parent"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="마감 기한"
                  app:layout_constraintHorizontal_bias="0.05"
                  android:textColor="#000" app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:id="@+id/textView2"
                  app:layout_constraintBottom_toTopOf="@+id/create_mission_title"
                  app:layout_constraintTop_toBottomOf="@+id/my_point"/>
        <Button android:layout_width="wrap_content" android:layout_height="50dp"
                android:layout_margin="12dp"
                android:textColor="#fff"
                android:text="기간 정하기"
                android:onClick="@{()->cmFrag.createExprieAtData()}"
                app:layout_constraintStart_toEndOf="@+id/create_mission_reward"
                app:layout_constraintTop_toTopOf="@+id/textView2"
                app:layout_constraintBottom_toBottomOf="@+id/textView2" android:layout_marginStart="8dp"
                android:id="@+id/button4"/>
        <TextView
                android:text="@{cmFrag.expireAt}"
                android:layout_marginStart="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/button4"
                app:layout_constraintBottom_toBottomOf="@+id/textView2"
                app:layout_constraintTop_toTopOf="@+id/textView2"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textColor="#000"
                  android:text="미션 제목"
                  android:id="@+id/create_mission_title"
                  app:layout_constraintStart_toStartOf="@+id/textView2"
                  app:layout_constraintTop_toBottomOf="@+id/textView2"
                  app:layout_constraintBottom_toTopOf="@+id/create_mission_reward"/>
        <EditText android:layout_width="0dp" android:layout_height="50dp"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:layout_margin="12dp"
                  android:textColor="#000"
                  android:inputType="text"
                  android:imeOptions="actionNext"
                  android:text="@={cmFrag.title}"
                  android:background="@drawable/mission_item_stroke"
                  app:layout_constraintStart_toEndOf="@+id/create_mission_reward"
                  app:layout_constraintTop_toTopOf="@+id/create_mission_title"
                  app:layout_constraintBottom_toBottomOf="@+id/create_mission_title" android:id="@+id/editText"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textColor="#000"
                  android:text="Reward"
                  android:id="@+id/create_mission_reward"
                  app:layout_constraintStart_toStartOf="@+id/create_mission_title"
                  android:layout_marginStart="4dp"
                  app:layout_constraintTop_toBottomOf="@+id/create_mission_title"
                  app:layout_constraintBottom_toTopOf="@+id/create_mission_description"/>
        <EditText android:layout_width="0dp" android:layout_height="50dp"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:layout_margin="12dp"
                  android:textColor="#000"
                  android:inputType="text"
                  android:imeOptions="actionNext"
                  android:text="@={cmFrag.reward}"
                  android:background="@drawable/mission_item_stroke"
                  app:layout_constraintStart_toEndOf="@+id/create_mission_reward"
                  app:layout_constraintTop_toTopOf="@+id/create_mission_reward"
                  app:layout_constraintBottom_toBottomOf="@+id/create_mission_reward" android:layout_marginStart="7dp"
                  android:id="@+id/editText2"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textColor="#000"
                  android:text="미션 설명"
                  android:id="@+id/create_mission_description"
                  app:layout_constraintStart_toStartOf="@+id/create_mission_reward"
                  app:layout_constraintTop_toBottomOf="@+id/create_mission_reward"
                  app:layout_constraintBottom_toTopOf="@+id/button3"/>
        <EditText android:layout_width="0dp" android:layout_height="50dp" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_margin="12dp"
                  android:textColor="#000"
                  android:inputType="text"
                  android:imeOptions="actionNext"
                  android:text="@={cmFrag.description}"
                  android:background="@drawable/mission_item_stroke"
                  app:layout_constraintStart_toEndOf="@+id/create_mission_reward"
                  app:layout_constraintTop_toTopOf="@+id/create_mission_description"
                  app:layout_constraintBottom_toBottomOf="@+id/create_mission_description"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="미션 등록"
                android:onClick="@{()->cmFrag.submitMission()}"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/button3"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>