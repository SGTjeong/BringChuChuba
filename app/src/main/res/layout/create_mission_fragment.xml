<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="cmFrag" type="com.bring.chuchuba.view.CreateMissionFragment"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:background="#fff"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:focusable="true">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="마감 기한"
                  app:layout_constraintHorizontal_bias="0.1"
                  android:textColor="#000" app:layout_constraintStart_toStartOf="parent"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:id="@+id/textView2" app:layout_constraintTop_toTopOf="parent"
                  app:layout_constraintBottom_toTopOf="@+id/create_mission_title"/>
        <EditText android:layout_width="0dp" android:layout_height="wrap_content"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:layout_margin="12dp"
                  android:textColor="#000"
                  android:text="@={cmFrag.expireAt}"
                  android:background="@drawable/mission_window"
                  app:layout_constraintStart_toEndOf="@+id/create_mission_reward"
                  app:layout_constraintTop_toTopOf="@+id/textView2"
                  app:layout_constraintBottom_toBottomOf="@+id/textView2" android:layout_marginStart="8dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textColor="#000"
                  android:text="미션 제목"
                  android:id="@+id/create_mission_title"
                  app:layout_constraintStart_toStartOf="@+id/textView2"
                  app:layout_constraintTop_toBottomOf="@+id/textView2"
                  app:layout_constraintBottom_toTopOf="@+id/create_mission_reward"/>
        <EditText android:layout_width="0dp" android:layout_height="wrap_content"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:layout_margin="12dp"
                  android:textColor="#000"
                  android:text="@={cmFrag.title}"
                  android:background="@drawable/mission_window"
                  app:layout_constraintStart_toEndOf="@+id/create_mission_reward"
                  app:layout_constraintTop_toTopOf="@+id/create_mission_title"
                  app:layout_constraintBottom_toBottomOf="@+id/create_mission_title" android:id="@+id/editText"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textColor="#000"
                  android:text="Reward"
                  android:id="@+id/create_mission_reward"
                  app:layout_constraintStart_toStartOf="@+id/create_mission_title"
                  android:layout_marginStart="4dp"
                  app:layout_constraintTop_toBottomOf="@+id/create_mission_title"
                  app:layout_constraintBottom_toTopOf="@+id/create_mission_description"/>
        <EditText android:layout_width="0dp" android:layout_height="wrap_content"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:layout_margin="12dp"
                  android:textColor="#000"
                  android:text="@={cmFrag.reward}"
                  android:background="@drawable/mission_window"
                  app:layout_constraintStart_toEndOf="@+id/create_mission_reward"
                  app:layout_constraintTop_toTopOf="@+id/create_mission_reward"
                  app:layout_constraintBottom_toBottomOf="@+id/create_mission_reward" android:layout_marginStart="7dp"
                  android:id="@+id/editText2"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textColor="#000"
                  android:text="미션 설명"
                  android:id="@+id/create_mission_description"
                  app:layout_constraintStart_toStartOf="@+id/create_mission_reward"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintTop_toBottomOf="@+id/create_mission_reward"
        />
        <EditText android:layout_width="0dp" android:layout_height="50dp" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_margin="12dp"
                  android:textColor="#000"
                  android:text="@={cmFrag.description}"
                  android:background="@drawable/mission_window"
                  app:layout_constraintStart_toEndOf="@+id/create_mission_reward"
                  app:layout_constraintTop_toTopOf="@+id/create_mission_description"
                  app:layout_constraintBottom_toBottomOf="@+id/create_mission_description"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="미션 등록"
                android:onClick="@{()->cmFrag.submitMission()}"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>