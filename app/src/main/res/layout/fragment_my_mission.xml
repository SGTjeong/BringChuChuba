<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        tools:context=".view.MyMissionFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:clickable="true"
            android:background="#98FFB5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true">
        <com.google.android.material.tabs.TabLayout
                android:layout_marginTop="8dp"
                app:tabMode="scrollable"
                android:layout_width="wrap_content"
                app:tabBackground="@drawable/mission_window"
                app:tabPadding="8dp"
                app:tabIndicator="@android:color/transparent"
                android:background="@android:color/transparent"
                android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/my_mission_tablayout"/>

        <androidx.viewpager2.widget.ViewPager2
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="0dp" android:id="@+id/my_mission_viewPager"
                app:layout_constraintTop_toBottomOf="@+id/my_mission_tablayout" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>