<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="mission" type="com.bring.chuchuba.model.mission.MissionsItem"/>
    </data>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/mission_item_stroke"
            android:layout_marginVertical="6dp"
            android:paddingVertical="6dp"
            android:weightSum="5">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="@{mission.title}"
                android:id="@+id/orderer"
                android:hint="Orderer"
                android:gravity="center"
                android:textAlignment="center"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="mission.description"
                android:text="@{mission.description}"
                android:id="@+id/name"
                android:gravity="center"
                android:textAlignment="center"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="@{mission.expireAt}"
                android:id="@+id/expireAt"
                android:hint="70-01-01"
                android:gravity="center"
                android:textAlignment="center"/>

    </LinearLayout>
</layout>