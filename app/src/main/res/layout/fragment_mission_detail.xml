<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        tools:context=".view.MissionDetailFragment">
    <data>
        <variable name="mdFrag" type="com.bring.chuchuba.view.MissionDetailFragment"/>
    </data>
    <ScrollView
            android:background="#90DCFF"
            android:clickable="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginHorizontal="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="@{mdFrag.mission.title}"
                    android:layout_width="match_parent"
                    android:textColor="#000"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:layout_marginTop="32dp"
                    android:hint="미션 제목" android:id="@+id/detail_mission_title"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                    bind:missionStatus="@{mdFrag.mission.status}"
                    app:layout_constraintHorizontal_bias="0.1"
                    android:hint="상태"
                    android:textColor="#000"
                    android:layout_marginVertical="50dp"
                    android:textSize="18sp"
                    android:id="@+id/detail_mission_status"
                    app:layout_constraintTop_toBottomOf="@+id/detail_mission_title"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                    android:text="@{mdFrag.mission.createdAt + ` ~ ` + mdFrag.mission.expireAt}"
                    android:gravity="center"
                    android:textColor="#000"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="기간" app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/detail_mission_time"
                    app:layout_constraintTop_toBottomOf="@+id/detail_mission_status"
                    app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                    android:text="@{mdFrag.mission.reward}"
                    android:hint="보상"
                    app:layout_constraintHorizontal_bias="0.1"
                    android:layout_marginVertical="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/detail_mission_time"
                    android:id="@+id/detail_mission_reward" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                    android:text="@{mdFrag.mission.description}"
                    android:padding="8dp"
                    app:layout_constraintHorizontal_bias="0.1"
                    android:layout_marginTop="50dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="@drawable/mission_item_stroke"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="미션 내용" android:id="@+id/detail_mission_description"
                    app:layout_constraintTop_toBottomOf="@+id/detail_mission_reward"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"/>

            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="미션 완료"
                    android:onClick="@{()->mdFrag.completeMission()}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/detail_mission_description" android:id="@+id/completeMissionButton"/>

            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="제가 할게요"
                    android:layout_marginEnd="10dp"
                    android:id="@+id/contractMissionButton"
                    android:onClick="@{()->mdFrag.contractMission()}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/completeMissionButton"
                    app:layout_constraintTop_toBottomOf="@+id/detail_mission_description"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</layout>