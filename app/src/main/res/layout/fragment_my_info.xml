<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="infoFrag" type="com.bring.chuchuba.view.MyInfoFragment"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".view.MyInfoFragment">

        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:onClick="@{() -> infoFrag.createFamily()}"
                android:text="가족 만들기" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/button"/>
        <EditText android:layout_width="0dp" android:layout_height="wrap_content"
                  android:hint="가족ID 입력(딥링크로 할 예정)"
                  android:text="@={infoFrag.fId}"
                  app:layout_constraintTop_toTopOf="@+id/button2"
                  app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="@+id/button2"/>

        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="가족 참여하기"
                android:layout_marginHorizontal="16dp"
                android:onClick="@{() -> infoFrag.joinFamily()}"
                app:layout_constraintTop_toBottomOf="@+id/button"
                app:layout_constraintEnd_toEndOf="parent" android:id="@+id/button2"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>